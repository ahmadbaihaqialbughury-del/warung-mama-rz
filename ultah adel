  <script>
    // create confetti pieces
    const confettiContainer = document.getElementById('confetti');
    const colors = ['#FF6B6B','#FFD93D','#6BE3FF','#A28BFF','#FF9AC2','#6BF5A8'];
    for(let i=0;i<28;i++){
      const el = document.createElement('div');
      el.className='confetti-piece';
      el.style.left = Math.random()*100 + '%';
      el.style.background = colors[Math.floor(Math.random()*colors.length)];
      el.style.transform = `translateY(${ -Math.random()*20 }vh) rotate(${Math.random()*360}deg)`;
      el.style.animationDelay = (Math.random()*3)+'s';
      el.style.width = (8 + Math.random()*12) + 'px';
      el.style.height = (10 + Math.random()*18) + 'px';
      confettiContainer.appendChild(el);
    }

    
    });

    // play Jamrud - Selamat Ulang Tahun (user harus menyediakan file mp3 bernama jamrud_selamat_ulang_tahun.mp3)
    const audio = document.getElementById('song');
    document.getElementById('playSong').addEventListener('click', ()=>{
      window.open('https://www.youtube.com/watch?v=mAJa4SF_VVI&list=RDmAJa4SF_VVI&start_radio=1','_blank');
    });
    });
  </script>
